<Window x:Class="DownloadFileWithProgressbar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel>
            <TextBox Name="TextBoxFile" Height="30"/>
            <Button Name="ButtonDownload" Content="Download" Width="80" Height="30" Click="ButtonDownload_OnClick"/>
            <ProgressBar Name="ProgressBarDownload" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
